<Window x:Class="Test1.Pages.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test1.Pages"
        mc:Ignorable="d"
        Title="Authorization" Height="550" Width="350">
    <Grid>
        <StackPanel>
            <Image Source="../Images/logo.png" Height="100"/>
            <Label HorizontalAlignment="Center">Придумайте логин:</Label>
            <TextBox/>
            <Label HorizontalAlignment="Center">Придумайте пароль:</Label>
            <PasswordBox/>
            <Label HorizontalAlignment="Center">Повторите пароль</Label>
            <PasswordBox/>
            <Label HorizontalAlignment="Center">Введите фамилию</Label>
            <TextBox/>
            <Label HorizontalAlignment="Center">Введите имя</Label>
            <TextBox/>
            <Label HorizontalAlignment="Center">Введите отчество</Label>
            <TextBox/>
            <Button Margin="0,5">Зарегистрироваться</Button>
        </StackPanel>
        
    </Grid>
</Window>
